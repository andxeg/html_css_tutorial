.header_top
    overflow hidden
    margin-bottom 30px

.header_logo
    positive relative
    display inline-block
    vertical-align top
    margin-right 120px
    a
        font-size 3rem
        font-family logoFont,sans-serif
        color orangeColor
        line-height 1
    span
        position relative
        top 20px
        right 230px
        text-transform uppercase
        font-weight bold
        font-size 1.14rem

.header_address
    display inline-block
    
.header_address_top
    margin-bottom 10px

.header_phone
    margin-right 10px
    font-size 1.7rem
    span
        font-weight bold
        font-family '',sans-serif
    &:before
        content ''
        display inline-block
        margin-right 10px
        width 18px
        height 18px
        background url('../img/icons/telephone.png') 0 0 no-repeat

.header_address_bottom
    text-align right
    span
        font-weight bold
        &:before
            content ''
            display inline-block
            margin-right 10px
            margin-bottom -3px
            width 18px
            height 21px
            background url('../img/icons/location.png') 0 0 no-repeat

.header_basket_wrap
    float right
    a
        font-size 0.9rem
        font-weight bold
        text-decoration underline

.header_basket
    padding 20px 30px
    margin-bottom 5px
    background-color lightPinkColor
    font-weight bold
    border-radius 40px
    span
        position relative
        display block
        padding-left 65px
        &:before
            content ''
            position absolute
            display block
            left 0
            width 54px
            height 51px
            background url('../img/icons/basket.png') 0 0 no-repeat

.main_nav-wrap
    margin-bottom 20px
    padding 5px 10px 5px 30px
    overflow hidden
    background-color lightPink
    border-radius 5px

.main_nav
    display inline-block
    li
        display inline-block
        margin-right 15px
        &:last-child
            margin-right 0
    a
        display block
        padding 0 15px
        line-height 30px
        text-transform uppercase
        color white
        border-radius 5px
        font-family lightFont,sans-serif
        font-size 1rem
        &.active,
        &:hover
            color lightPink
            background-color white

.top_search-wrap
    position relative
    float right
    width 100%
    max-width 210px
    &:after
        position absolute
        right 15px
        top 7px
        content ''
        display block
        width 20px
        height 20px
        background url('../img/icons/search.png') 0 0 no-repeat
    input
        width 100%
        padding 0 20px
        border none
        border-radius 25px
        line-height 30px
    